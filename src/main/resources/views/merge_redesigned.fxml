<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.pdftoolkit.controllers.MergeControllerRedesigned"
           styleClass="content-root">

    <!-- Main Two-Panel Layout -->
    <HBox styleClass="two-panel-layout" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
        
        <!-- LEFT PANEL: Workspace with PDF cards -->
        <VBox styleClass="left-panel" HBox.hgrow="ALWAYS" spacing="16">
            <padding>
                <Insets top="24" right="24" bottom="24" left="24"/>
            </padding>
            
            <!-- Header -->
            <VBox spacing="8">
                <Label text="%merge.title" styleClass="panel-title"/>
                <Label fx:id="instructionLabel" text="%merge.instruction" styleClass="instruction-text" wrapText="true"/>
            </VBox>
            
            <!-- PDF List Container with Drag & Drop -->
            <VBox fx:id="pdfListContainer" styleClass="pdf-list-container" VBox.vgrow="ALWAYS" spacing="8">
                <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS" 
                           styleClass="content-scroll" style="-fx-background-color: transparent;">
                    <VBox fx:id="cardListBox" spacing="8" minHeight="300">
                        <!-- PDF cards will be added here dynamically -->
                        <!-- Empty state placeholder -->
                        <StackPane fx:id="emptyStatePane" minHeight="300">
                            <VBox alignment="CENTER" spacing="16">
                                <Label text="ðŸ“„" style="-fx-font-size: 64px; -fx-opacity: 0.4;"/>
                                <Label text="%merge.emptyState" styleClass="empty-state"/>
                                <Label text="%merge.emptyStateHint" styleClass="hint-label"/>
                            </VBox>
                        </StackPane>
                    </VBox>
                </ScrollPane>
            </VBox>
            
            <!-- FAB for Add PDF (Bottom Right of Left Panel) -->
            <StackPane>
                <HBox alignment="BOTTOM_RIGHT">
                    <Button fx:id="addPdfButton" text="+" styleClass="fab" onAction="#handleAddPdf">
                        <tooltip>
                            <Tooltip text="%merge.addPdf"/>
                        </tooltip>
                    </Button>
                </HBox>
            </StackPane>
        </VBox>
        
        <!-- RIGHT PANEL: Configuration & Action -->
        <VBox styleClass="right-panel" spacing="24" minWidth="360" prefWidth="380">
            <padding>
                <Insets top="24" right="24" bottom="24" left="24"/>
            </padding>
            
            <!-- Title -->
            <VBox spacing="4">
                <Label text="%merge.title" styleClass="panel-title"/>
                <Label text="%merge.subtitle" styleClass="panel-subtitle" wrapText="true"/>
            </VBox>
            
            <Separator/>
            
            <!-- Summary Section -->
            <VBox spacing="12" fx:id="summarySection">
                <Label text="%merge.summary" styleClass="section-label"/>
                <VBox styleClass="summary-box" spacing="8">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="ðŸ“„" style="-fx-font-size: 18px;"/>
                        <Label fx:id="filesCountLabel" text="0 files" styleClass="summary-value"/>
                    </HBox>
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="ðŸ“ƒ" style="-fx-font-size: 18px;"/>
                        <Label fx:id="totalPagesLabel" text="0 pages" styleClass="summary-label"/>
                    </HBox>
                </VBox>
            </VBox>
            
            <Separator/>
            
            <!-- Output Settings -->
            <VBox spacing="16">
                <Label text="%merge.step2" styleClass="section-label"/>
                
                <!-- Output Folder -->
                <VBox spacing="8">
                    <Label text="%merge.outputFolder" styleClass="field-label"/>
                    <HBox spacing="8">
                        <TextField fx:id="outputFolderField" HBox.hgrow="ALWAYS" 
                                  editable="false" styleClass="field-input"
                                  promptText="%merge.chooseDestination"/>
                        <Button fx:id="browseFolderButton" styleClass="secondary-button" 
                               onAction="#handleBrowseOutputFolder">
                            <graphic>
                                <Label text="ðŸ“" style="-fx-font-size: 16px;"/>
                            </graphic>
                        </Button>
                    </HBox>
                </VBox>
                
                <!-- Output Filename -->
                <VBox spacing="8">
                    <Label text="%merge.filenameLabel" styleClass="field-label"/>
                    <TextField fx:id="outputFilenameField" styleClass="field-input"
                              text="merged.pdf" promptText="%merge.defaultFilename"/>
                </VBox>
            </VBox>
            
            <!-- Spacer to push button to bottom -->
            <Region VBox.vgrow="ALWAYS"/>
            
            <!-- Primary Action Button -->
            <Button fx:id="mergeButton" text="%merge.mergeNow" styleClass="primary-button" 
                   defaultButton="true" onAction="#handleMerge" disable="true" maxWidth="Infinity"/>
            
            <!-- Back Button -->
            <Button fx:id="backButton" text="%app.back" styleClass="secondary-button" 
                   onAction="#handleBack" maxWidth="Infinity"/>
        </VBox>
    </HBox>

    <!-- Progress Overlay -->
    <StackPane fx:id="progressOverlay" styleClass="progress-overlay" visible="false" managed="false">
        <VBox alignment="CENTER" spacing="32" styleClass="progress-card">
            <VBox alignment="CENTER" spacing="16">
                <Label fx:id="progressTitle" text="%merge.processing" styleClass="progress-title"/>
                <ProgressBar fx:id="progressBar" prefWidth="400" styleClass="progress-bar" progress="-1"/>
                <Label fx:id="progressMessage" text="%progress.processing" styleClass="progress-message"/>
            </VBox>
            
            <Button fx:id="cancelProcessButton" text="%app.cancel" styleClass="secondary-button" 
                   onAction="#handleCancelProcess"/>
            
            <!-- Success Pane (Initially Hidden) -->
            <VBox fx:id="successPane" alignment="CENTER" spacing="20" visible="false" managed="false">
                <Label text="âœ“" styleClass="success-icon"/>
                <Label fx:id="successMessage" text="%merge.success" 
                      styleClass="success-message" wrapText="true" textAlignment="CENTER" maxWidth="400"/>
                <HBox spacing="16" alignment="CENTER">
                    <Button fx:id="openFolderButton" text="%merge.openFolder" 
                           styleClass="secondary-button" onAction="#handleOpenFolder"/>
                    <Button fx:id="processAnotherButton" text="%merge.processAnother" 
                           styleClass="primary-button" onAction="#handleProcessAnother"/>
                </HBox>
            </VBox>
        </VBox>
    </StackPane>

</StackPane>
