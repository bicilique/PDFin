<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.pdftoolkit.controllers.SplitController"
           styleClass="content-root">

    <!-- Main Two-Panel Layout -->
    <HBox styleClass="two-panel-layout" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
        
        <!-- LEFT PANE: File Staging Area (Following Protect Style) -->
        <VBox styleClass="files-pane" HBox.hgrow="ALWAYS">
            <padding>
                <Insets top="32" right="24" bottom="32" left="32"/>
            </padding>
            
            <!-- Files Pane Header -->
            <HBox alignment="CENTER_LEFT" spacing="12" styleClass="files-header">
                <Label text="%split.filesPane.title" styleClass="pane-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="removePdfButton" text="%split.removeFile" styleClass="text-button" 
                        onAction="#handleRemovePdf" visible="false" managed="false"/>
            </HBox>
            
            <VBox.margin>
                <Insets bottom="20"/>
            </VBox.margin>
            
            <!-- Drop Zone (Shown when empty) -->
            <StackPane fx:id="dropZonePane" styleClass="drop-zone-large" VBox.vgrow="ALWAYS">
                <VBox alignment="CENTER" spacing="20">
                    <StackPane fx:id="dropZoneIconContainer" prefWidth="60" prefHeight="60"/>
                    <VBox alignment="CENTER" spacing="8">
                        <Label text="%split.dropZone.title" styleClass="drop-zone-title"/>
                        <Label text="%split.dropZone.subtitle" styleClass="drop-zone-subtitle"/>
                    </VBox>
                    <Button fx:id="selectFilesButton" text="%split.selectFiles" styleClass="primary-button" 
                            onAction="#handleSelectFile"/>
                    <Label text="%split.dropZone.formats" styleClass="drop-zone-hint"/>
                </VBox>
            </StackPane>
            
            <!-- Page Thumbnails View (Shown when file selected) -->
            <VBox fx:id="pagePreviewContainer" visible="false" managed="false" VBox.vgrow="ALWAYS" spacing="12">
                
                <!-- File Info Bar -->
                <HBox spacing="12" alignment="CENTER_LEFT" styleClass="file-info-bar">
                    <Label fx:id="selectedFileInfoLabel" text="" styleClass="file-info-label" HBox.hgrow="ALWAYS"/>
                    
                    <!-- Zoom Controls -->
                    <HBox spacing="8" alignment="CENTER_LEFT" fx:id="zoomControlsBox" styleClass="zoom-controls">
                        <Label text="%split.zoom.label" styleClass="field-label-small"/>
                        <Button fx:id="zoomOutButton" text="âˆ’" styleClass="zoom-button" 
                               onAction="#handleZoomOut" minWidth="28" prefWidth="28"/>
                        <Slider fx:id="zoomSlider" min="1.0" max="2.0" value="1.0" 
                               blockIncrement="0.5" majorTickUnit="0.5" minorTickCount="0" 
                               showTickMarks="false" snapToTicks="true" prefWidth="120"/>
                        <Button fx:id="zoomInButton" text="+" styleClass="zoom-button" 
                               onAction="#handleZoomIn" minWidth="28" prefWidth="28"/>
                        <Label fx:id="zoomPercentLabel" text="100%" styleClass="field-label-small" 
                              minWidth="45" alignment="CENTER_RIGHT"/>
                    </HBox>
                    
                    <Button fx:id="deselectAllButton" text="%split.clearAll" 
                           styleClass="secondary-button-small" onAction="#handleDeselectAll" 
                           visible="false" managed="false"/>
                </HBox>
                
                <!-- Scrollable Page Grid -->
                <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="files-scroll" VBox.vgrow="ALWAYS">
                    <VBox spacing="12">
                        <!-- Page Thumbnails Grid Container -->
                        <TilePane fx:id="pageGridContainer" hgap="12" vgap="12" 
                                 prefColumns="3" prefTileWidth="150" prefTileHeight="200" 
                                 alignment="TOP_LEFT" styleClass="page-grid">
                            <!-- Page thumbnail cards will be added here dynamically -->
                        </TilePane>
                        
                        <!-- Progressive Loading Controls -->
                        <HBox spacing="12" alignment="CENTER" fx:id="loadControlsBox" 
                             visible="false" managed="false" styleClass="load-controls">
                            <Label fx:id="pageLoadStatusLabel" text="" 
                                  styleClass="field-label" HBox.hgrow="ALWAYS"/>
                            <Button fx:id="loadMoreButton" text="%split.loadMore" 
                                   styleClass="secondary-button" onAction="#handleLoadMore"/>
                            <Button fx:id="loadAllButton" text="%split.loadAll" 
                                   styleClass="secondary-button" onAction="#handleLoadAll"/>
                            <ProgressIndicator fx:id="loadingProgressIndicator" 
                                             prefWidth="24" prefHeight="24" 
                                             visible="false" managed="false"/>
                        </HBox>
                    </VBox>
                </ScrollPane>
                
            </VBox>
            
        </VBox>
        
        <!-- RIGHT PANEL: Configuration & Primary CTA -->
        <BorderPane styleClass="right-panel" minWidth="380" prefWidth="420" maxWidth="480">
            <!-- Scrollable Configuration Area -->
            <center>
                <ScrollPane fitToWidth="true" styleClass="content-scroll" 
                           style="-fx-background-color: transparent; -fx-border-width: 0;">
                    <VBox spacing="24">
                        <padding>
                            <Insets top="24" right="24" bottom="16" left="24"/>
                        </padding>
                        
                        <!-- Title -->
                        <VBox spacing="4">
                            <Label text="%split.title" styleClass="settings-title"/>
                            <Label text="%split.subtitle" styleClass="settings-subtitle" wrapText="true"/>
                        </VBox>
                        
                        <Separator styleClass="settings-separator"/>
                        
                        <!-- Step 1: Mode Selector (File selection now in left panel) -->
                        <VBox spacing="12" fx:id="modeSection" disable="true">
                            <Label text="%split.step2" styleClass="section-title"/>
                            
                            <!-- Segmented Toggle for Split Mode -->
                            <HBox spacing="0" styleClass="segmented-control">
                                <ToggleButton fx:id="splitByRangeToggle" text="%split.splitByRange" 
                                             styleClass="toggle-left" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                                <ToggleButton fx:id="extractPagesToggle" text="%split.extractPages" 
                                             styleClass="toggle-right" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                            </HBox>
                            
                            <!-- Range Type Selection (Custom / Fixed) - NOW VISIBLE WITH HELPER TEXT -->
                            <VBox spacing="8" fx:id="rangeTypeSection" visible="true" managed="true">
                                <Label text="%split.rangeType" styleClass="field-label"/>
                                <Label text="%split.rangeTypeHelper" styleClass="hint-label" 
                                      style="-fx-font-size: 12px; -fx-padding: 0 0 4 0;"/>
                                <HBox spacing="8" styleClass="choice-card-group">
                                    <ToggleButton fx:id="customRangesToggle" text="%split.customRanges" 
                                                 styleClass="choice-card" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                                        <tooltip>
                                            <Tooltip text="%split.customRangesTooltip"/>
                                        </tooltip>
                                    </ToggleButton>
                                    <ToggleButton fx:id="fixedRangesToggle" text="%split.fixedRanges" 
                                                 styleClass="choice-card" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                                        <tooltip>
                                            <Tooltip text="%split.fixedRangesTooltip"/>
                                        </tooltip>
                                    </ToggleButton>
                                </HBox>
                            </VBox>
                        </VBox>
                        
                        <Separator fx:id="rangeEditorSeparator" disable="true"/>
                        
                        <!-- Range Editor (for selected range card) -->
                        <VBox spacing="12" fx:id="rangeEditorSection" disable="true" visible="true" managed="true">
                            <Label fx:id="rangeEditorTitle" text="%split.rangeEditor" styleClass="section-label"/>
                            
                            <HBox spacing="12" alignment="CENTER_LEFT">
                                <VBox spacing="6" HBox.hgrow="ALWAYS">
                                    <Label text="%split.from" styleClass="field-label"/>
                                    <Spinner fx:id="fromPageSpinner" editable="true" 
                                            styleClass="range-spinner" maxWidth="Infinity"/>
                                </VBox>
                                <Label text="â€”" style="-fx-font-size: 20px; -fx-padding: 22 0 0 0; -fx-text-fill: #94a3b8;"/>
                                <VBox spacing="6" HBox.hgrow="ALWAYS">
                                    <Label text="%split.to" styleClass="field-label"/>
                                    <Spinner fx:id="toPageSpinner" editable="true" 
                                            styleClass="range-spinner" maxWidth="Infinity"/>
                                </VBox>
                            </HBox>
                            
                            <!-- Validation message -->
                            <Label fx:id="validationLabel" styleClass="validation-error" 
                                  visible="false" wrapText="true" managed="false"/>
                        </VBox>
                        
                        <!-- Fixed Interval Section (for Fixed Ranges mode) -->
                        <VBox spacing="12" fx:id="fixedIntervalSection" disable="true" visible="false" managed="false">
                            <Label text="%split.fixedInterval" styleClass="section-label"/>
                            
                            <VBox spacing="8">
                                <Label text="%split.pagesPerFile" styleClass="field-label"/>
                                <Spinner fx:id="pagesPerFileSpinner" editable="true" 
                                        styleClass="range-spinner" maxWidth="200" 
                                        prefWidth="200"/>
                                <Label text="%split.fixedIntervalHint" styleClass="hint-label" wrapText="true"/>
                            </VBox>
                            
                            <!-- Fixed Interval Validation message -->
                            <Label fx:id="fixedIntervalValidationLabel" styleClass="validation-error" 
                                  visible="false" wrapText="true" managed="false"/>
                        </VBox>
                        
                        <!-- Extract Pages Section (for Extract mode) -->
                        <VBox spacing="12" fx:id="extractPagesSection" disable="true" visible="false" managed="false">
                            <Label text="%split.extractPagesSpec" styleClass="section-label"/>
                            
                            <VBox spacing="8">
                                <Label text="%split.pageSpecification" styleClass="field-label"/>
                                <TextField fx:id="extractPagesField" promptText="%split.extractPagesPlaceholder" 
                                          styleClass="field-input" maxWidth="Infinity"/>
                                <Label text="%split.extractPagesHint" styleClass="hint-label" wrapText="true"/>
                            </VBox>
                            
                            <!-- Extract Validation message -->
                            <Label fx:id="extractValidationLabel" styleClass="validation-error" 
                                  visible="false" wrapText="true" managed="false"/>
                        </VBox>
                        
                        <Separator/>
                        
                        <!-- Step 3: Output Settings -->
                        <VBox spacing="12" fx:id="outputSection" disable="true">
                            <Label text="%split.step3" styleClass="section-label"/>
                            
                            <VBox spacing="8">
                                <Label text="%split.outputFolder" styleClass="field-label"/>
                                <HBox spacing="8">
                                    <TextField fx:id="outputFolderField" HBox.hgrow="ALWAYS" 
                                              editable="false" styleClass="field-input"
                                              promptText="%split.chooseFolder"/>
                                    <Button fx:id="browseFolderButton" styleClass="icon-button" 
                                           onAction="#handleBrowseOutputFolder">
                                        <graphic>
                                            <Label text="ðŸ“" style="-fx-font-size: 18px;"/>
                                        </graphic>
                                        <tooltip>
                                            <Tooltip text="%split.chooseFolder"/>
                                        </tooltip>
                                    </Button>
                                </HBox>
                                <Label fx:id="outputInfoLabel" text="%split.outputInfo" 
                                      styleClass="hint-label" visible="false" wrapText="true"/>
                            </VBox>
                        </VBox>
                    </VBox>
                </ScrollPane>
            </center>
            
            <!-- Bottom: Primary CTA Bar (Sticky) -->
            <bottom>
                <VBox styleClass="cta-bar" spacing="12">
                    <padding>
                        <Insets top="16" right="24" bottom="24" left="24"/>
                    </padding>
                    <Separator/>
                    <Button fx:id="splitButton" text="%split.splitNow" styleClass="primary-button" 
                           defaultButton="true" onAction="#handleSplit" disable="true" maxWidth="Infinity"/>
                    <Button fx:id="backButton" text="%app.back" styleClass="secondary-button" 
                           onAction="#handleBack" maxWidth="Infinity"/>
                </VBox>
            </bottom>
        </BorderPane>
    </HBox>

    <!-- Progress Overlay -->
    <StackPane fx:id="progressOverlay" styleClass="progress-overlay" visible="false" managed="false">
        <VBox alignment="CENTER" spacing="24" styleClass="progress-card" maxWidth="480" maxHeight="400">
            <VBox alignment="CENTER" spacing="16">
                <Label fx:id="progressTitle" text="%split.processing" styleClass="progress-title"/>
                <ProgressBar fx:id="progressBar" prefWidth="360" styleClass="progress-bar" progress="-1"/>
                <Label fx:id="progressMessage" text="%progress.processing" styleClass="progress-message" wrapText="true" textAlignment="CENTER"/>
            </VBox>
            
            <Button fx:id="cancelProcessButton" text="%app.cancel" styleClass="secondary-button" 
                   onAction="#handleCancelProcess"/>
            
            <!-- Success Pane (Initially Hidden) -->
            <VBox fx:id="successPane" alignment="CENTER" spacing="16" visible="false" managed="false">
                <Label text="âœ“" styleClass="success-icon" style="-fx-font-size: 40px;"/>
                <Label fx:id="successMessage" text="%split.success" 
                      styleClass="success-message" wrapText="true" textAlignment="CENTER" maxWidth="360"/>
                <HBox spacing="12" alignment="CENTER">
                    <Button fx:id="openFolderButton" text="%split.openFolder" 
                           styleClass="secondary-button" onAction="#handleOpenFolder"/>
                    <Button fx:id="processAnotherButton" text="%split.processAnother" 
                           styleClass="primary-button" onAction="#handleProcessAnother"/>
                    <Button fx:id="closeSuccessButton" text="%app.close" 
                           styleClass="secondary-button" onAction="#handleCloseSuccess"/>
                </HBox>
            </VBox>
        </VBox>
    </StackPane>
    
    <!-- Delete Confirmation Modal -->
    <StackPane fx:id="deleteConfirmOverlay" styleClass="modal-overlay" visible="false" managed="false">
        <VBox alignment="CENTER" spacing="20" styleClass="modal-card" maxWidth="420" maxHeight="280">
            <VBox alignment="CENTER" spacing="12">
                <Label text="ðŸ—‘ï¸" style="-fx-font-size: 48px; -fx-opacity: 0.9;"/>
                <Label fx:id="deleteConfirmTitle" text="%split.confirmDeleteTitle" 
                      styleClass="modal-title" wrapText="true" textAlignment="CENTER"/>
                <Label fx:id="deleteConfirmMessage" text="%split.confirmDeleteMessage" 
                      styleClass="modal-message" wrapText="true" textAlignment="CENTER" maxWidth="360"/>
            </VBox>
            
            <HBox spacing="12" alignment="CENTER">
                <Button fx:id="cancelDeleteButton" text="%app.cancel" 
                       styleClass="secondary-button" onAction="#handleCancelDelete" prefWidth="100"/>
                <Button fx:id="confirmDeleteButton" text="%app.delete" 
                       styleClass="danger-button" onAction="#handleConfirmDelete" prefWidth="100"/>
            </HBox>
        </VBox>
    </StackPane>

</StackPane>
