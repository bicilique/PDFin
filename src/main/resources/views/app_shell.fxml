<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.pdftoolkit.controllers.ShellController"
            stylesheets="@../css/app.css"
            prefWidth="1200" prefHeight="800">

    <!-- Top Header with PDFin Branding -->
    <top>
        <HBox styleClass="header" alignment="CENTER_LEFT" spacing="16">
            <padding>
                <Insets top="20" right="32" bottom="20" left="32"/>
            </padding>
            <VBox spacing="2" HBox.hgrow="ALWAYS">
                <Label text="PDFin" styleClass="header-title"/>
                <Label text="Cepat. Rapi. Aman." styleClass="header-subtitle"/>
            </VBox>
            
            <!-- Theme Toggle Button -->
            <Button fx:id="themeToggleButton" text="ðŸŒ™" styleClass="theme-toggle" 
                    onAction="#handleThemeToggle" 
                    minWidth="44" minHeight="44"/>
        </HBox>
    </top>

    <!-- Left Navigation Sidebar -->
    <left>
        <VBox styleClass="sidebar" spacing="4">
            <padding>
                <Insets top="16" right="12" bottom="16" left="12"/>
            </padding>
            
            <Button fx:id="homeButton" text="Beranda" styleClass="nav-button" maxWidth="Infinity"/>
            
            <Separator styleClass="nav-separator">
                <VBox.margin>
                    <Insets top="12" bottom="8"/>
                </VBox.margin>
            </Separator>
            
            <Label text="ALAT PDF" styleClass="nav-section-label"/>
            
            <Button fx:id="mergeButton" text="Gabung PDF" styleClass="nav-button" maxWidth="Infinity"/>
            <Button fx:id="splitButton" text="Pisah PDF" styleClass="nav-button" maxWidth="Infinity"/>
            <Button fx:id="compressButton" text="Kompres PDF" styleClass="nav-button" maxWidth="Infinity"/>
            <Button fx:id="protectButton" text="Kunci PDF" styleClass="nav-button" maxWidth="Infinity"/>
        </VBox>
    </left>

    <!-- Center content area (views will be loaded here) -->
    <center>
        <StackPane styleClass="content-area"/>
    </center>
</BorderPane>
